{
    "version": "49.0.0",
    "description": "A set of tools to create, alter and inspect Matroska files.",
    "homepage": "https://mkvtoolnix.download",
    "license": "GPL-2.0-only",
    "architecture": {
        "64bit": {
            "url": "https://mkvtoolnix.download/windows/releases/49.0.0/mkvtoolnix-64-bit-49.0.0.7z",
            "hash": "sha512:64e4fd166679b54970479ee83481e30ec511a292daeadfe3e590efb4f3687ea7fd665cadf26c4b82531dc1d3c4c3210704e51e240f62b42c1ebe10ade36bf7c0"
        },
        "32bit": {
            "url": "https://mkvtoolnix.download/windows/releases/49.0.0/mkvtoolnix-32-bit-49.0.0.7z",
            "hash": "sha512:e9a4893320be58d08ba8830b321dc4ab840562204f71d424e82ee06268f0424111cce39d9f114a9e44c64d46c29fc5f4c5c76728a26932321f7d2ff46b235e91"
        }
    },
    "extract_dir": "mkvtoolnix",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\mkvtoolnix-gui.ini\")) {",
        "    Set-Content \"$dir\\mkvtoolnix-gui.ini\" @('[settings]', 'updates\\checkForUpdates=false') -Encoding Ascii",
        "} else {",
        "    # Persist mkvtoolnix-gui.ini manully because symlink doesn't work.",
        "    Copy-Item \"$persist_dir\\mkvtoolnix-gui.ini\" \"$dir\"",
        "}"
    ],
    "uninstaller": {
        "script": [
            "if (Test-Path \"$dir\\mkvtoolnix-gui.ini\") {",
            "    Copy-Item \"$dir\\mkvtoolnix-gui.ini\" \"$persist_dir\" -Force",
            "}"
        ]
    },
    "bin": [
        "mkvextract.exe",
        "mkvinfo.exe",
        "mkvmerge.exe",
        "mkvpropedit.exe",
        "mkvtoolnix-gui.exe"
    ],
    "shortcuts": [
        [
            "mkvtoolnix-gui.exe",
            "MKVToolNix GUI"
        ]
    ],
    "persist": [
        "cache",
        "jobQueue"
    ],
    "checkver": "Released v([\\d.]+)",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://mkvtoolnix.download/windows/releases/$version/mkvtoolnix-64-bit-$version.7z"
            },
            "32bit": {
                "url": "https://mkvtoolnix.download/windows/releases/$version/mkvtoolnix-32-bit-$version.7z"
            }
        },
        "hash": {
            "url": "$baseurl/sha512sums.txt"
        }
    }
}
